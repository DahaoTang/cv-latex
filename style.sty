% -----------------------------
% Personal Info Commands
% -----------------------------
\newcommand{\NameCN}[1]{\def\MyNameCN{#1}}
\newcommand{\NameEN}[1]{\def\MyNameEN{#1}}
\newcommand{\Email}[1]{\def\MyEmail{#1}}
\newcommand{\Phone}[1]{\def\MyPhone{#1}}
\newcommand{\Website}[1]{\def\MyWebsite{#1}}
\newcommand{\Blog}[1]{\def\MyBlog{#1}}
\newcommand{\GitHub}[1]{\def\MyGitHub{#1}}

% -----------------------------
% Section Heading Command
%   - Adds a horizontal rule under the heading
% -----------------------------
\newcommand{\CVSection}[1]{%
  \section*{#1}%
  \hrule
  \vspace{0.8em}
}

% -----------------------------
% Common Entry Commands
% -----------------------------
\newcommand{\EducationEntryCN}[4]{%
  \noindent
  {\large\textbf{#1}} \hfill #2 \\
  #3 \\
  \textbf{主修:} #4 \vspace{1em} 
}

\newcommand{\EducationEntryEN}[4]{%
  \noindent
  {\large\textbf{#1}} \hfill #2 \\
  #3 \\
  \emph{Major:} #4 \vspace{1em} 
}

\newcommand{\PublicationEntry}[3]{%
  \noindent
  {\large\textbf{#1}}, \emph{#2}, #3
  \vspace{1em}
}

\newcommand{\ExperienceEntryCN}[4]{%
  \noindent
  {\large\textbf{#1}} \hfill #2 \\
  \textbf{职位:} #3 \\
  \textbf{内容:} #4 \vspace{1em}
}

\newcommand{\ExperienceEntryEN}[4]{%
  \noindent
  {\large\textbf{#1}} \hfill #2 \\
  \emph{Position:} #3 \\
  \emph{Content:} #4 \vspace{1em}
}

